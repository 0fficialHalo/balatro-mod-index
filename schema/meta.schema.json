{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Balatro Mod Metadata",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "mod-loader": {
      "type": "string",
      "enum": ["steamodded", "lovely-only"]
    },
    "category": {
      "type": "string",
      "enum": ["Gameplay", "UI", "Card Mods"]
    },
    "author": {
      "type": "string"
    },
    "repo": {
      "type": "string",
      "format": "uri"
    },
    "downloadURL": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": ["title", "mod-loader", "category", "author", "repo", "downloadURL"]
}

